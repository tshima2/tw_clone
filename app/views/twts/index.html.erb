<div class="wrapper">
  <aside class="side_menu">
    <ul class="menu_list">
      <li><a href='/twts/new'><%= image_tag 'tweet.png', class: 'tweet_icon' %></a></li>
    </ul>
  </aside>
  <aside class="dummy_menu"><BR></aside>
  <article class="tweets">
    <div class="tweet_header">
      <h1>Tatsurou SHIMA</h1>
      <p><%= @twts.count %>件のツイート</p>         
    </div>
    <div class="tweet_box_wrapper">
      <% @twts.each do |twt| %>
      <div class="tweet_box">
        <span class="box_menu">...</span>
        <ul class="box_menu_list">
          <li class="box_item">
	          <%= link_to ('<span class="ui-icon ui-icon-circle-arrow-e"></span>編集').html_safe, edit_twt_path(twt.id) %>
	        </li>
          <li class="box_item">
	          <%= link_to ('<span class="ui-icon ui-icon ui-icon-trash"></span>削除').html_safe, twt_path(twt.id), method: :delete, data: { confirm: '本当に削除していいですか？'} %>
	        </li>
        </ul>
        <div class="box_content"><%= twt.content %></div>
      </div>
      <% end %>
    </div>
  </article>
</div>

<%= javascript_include_tag "index2.js" %>

